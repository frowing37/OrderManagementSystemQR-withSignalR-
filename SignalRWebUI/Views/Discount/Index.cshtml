@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model List<SignalRWebUI.Models.Dtos.ContactDto.ResultContactDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişimle ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">Konum</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Alt Açıklama</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr>
                                    <td>@contact.Location</td>
                                    <td>@contact.Phone</td>
                                    <td>@contact.FooterDescription</td>
                                    @if(@contact.Status) {
                                        <td><a href="/Contact/UpdateActivate/@contact.ContactID" class="btn btn-outline-info">Aktif</a></td>
                                    }
                                    else {
                                        <td><a href="/Contact/UpdateActivate/@contact.ContactID" class="btn btn-outline-dark">DeAktif</a></td>
                                    }
                                    <td><a href="/Contact/DeleteContact/@contact.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Contact/UpdateContact/@contact.ContactID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact" class="btn btn-outline-primary">Yeni İletişim Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>