@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model List<SignalRWebUI.Models.Dtos.SocialMediaDto.ResultSocialMediaDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">İkon</th>
                                <th scope="col">Mecra</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var social in Model)
                            {
                                <tr>
                                    <td>@social.Icon</td>
                                    <td>@social.Title</td>
                                    <td><a href="/SocialMedia/DeleteSocialMedia/@social.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/SocialMedia/UpdateSocialMedia/@social.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Öne Çıkan Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>