@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.SocialMediaDto.CreateSocialMediaDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="SocialMedia" asp-action="CreateSocialMedia" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuretitle1">Medya İsmi giriniz</label>
                                <input id="featuretitle1" type="text" asp-for="Title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="featuredes1">Url giriniz</label>
                                <input id="featuredes1" type="text" asp-for="URL" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="featuretitle1">Icon url giriniz</label>
                                <input id="featuretitle1" type="text" asp-for="Icon" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Sosyal Medya Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>