@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.NotificationDto.UpdateNotificationDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Notification" asp-action="UpdateNotification" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input id="categoryid" type="hidden" asp-for="NotificationID" class="form-control">
                            <input id="categorystatus" type="hidden" asp-for="Status" class="form-control">
                            <div class="form-group">
                                <label for="categoryname">Bildirim Tipi Giriniz</label>
                                <input id="categoryname" type="text" asp-for="Type" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim Iconu Giriniz</label>
                                <input id="categoryname" type="text" asp-for="Icon" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim Açıklaması Giriniz</label>
                                <input id="categoryname" type="text" asp-for="Description" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Bildirim Tarih Giriniz</label>
                                <input id="categoryname" type="date" asp-for="Date" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Bildirim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>