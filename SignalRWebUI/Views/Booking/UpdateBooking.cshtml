@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.BookingDto.UpdateBookingDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Forms</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Booking" asp-action="UpdateBooking" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input id="productid" type="hidden" asp-for="BookingID">
                            <div class="form-group">
                                <label for="bookingname">Ad Soyad giriniz</label>
                                <input id="bookingname" type="text" asp-for="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="bookingtel">Telefon giriniz</label>
                                <input id="bookingtel" type="tel" asp-for="Phone" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="bookingmail">Mail giriniz</label>
                                <input id="bookingmail" type="email" asp-for="Mail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="bookingpersoncount">Rezervasyon kaç kişilik olucak ?</label>
                                <input id="bookingpersoncount" type="number" asp-for="PersonCount" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="bookingdate">Rezervasyon tarihi seçiniz</label>
                                <input id="bookingdate" type="date" asp-for="Date" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Rezervasyon Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>