@model List<SignalRWebUI.Models.Dtos.BookingDto.ResultBookingDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezerv Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürünlerle ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3 justify-content-center">
                            <thead>
                                <tr>
                                    <th scope="col">Rezervasyon Sahibi</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">İletişim</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model)
                                {
                                    <tr>
                                        <td>@booking.Name</td>
                                        <td>@booking.Mail</td>
                                        <td>@booking.Date</td>
                                        <td>@booking.Phone</td>
                                        <td>@booking.PersonCount</td>
                                        <td><a href="/Booking/DeleteBooking/@booking.BookingID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Booking/UpdateBooking/@booking.BookingID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Booking/CreateBooking" class="btn btn-outline-primary">Yeni Rezervasyon Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>