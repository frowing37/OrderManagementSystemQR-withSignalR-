@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model List<SignalRWebUI.Models.Dtos.AboutDto.ResultAboutDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkında İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkında Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkında kısmı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Resim URL</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var about in Model)
                            {
                                <tr>
                                    <td>@about.AboutID</td>
                                    <td>@about.Title</td>
                                    @if(@about.Status) {
                                        <td><a href="/About/UpdateActivate/@about.AboutID" class="btn btn-outline-info">Aktif</a></td>
                                        
                                    }
                                    else {
                                        <td><a href="/About/UpdateActivate/@about.AboutID" class="btn btn-outline-dark">DeAktif</a></td>
                                    }
                                    <td><a href="/About/DeleteAbout/@about.AboutID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/About/UpdateAbout/@about.AboutID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/About/CreateAbout" class="btn btn-outline-primary">Yeni Hakkında Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>