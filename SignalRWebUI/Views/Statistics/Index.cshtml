<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <script type="text/javascript">
                    $(document).ready(() => {
                        var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:7237/SignalRHub").build();
                        $("#connstatus").text(connection.state);
                        connection.start().then(() => {
                            $("#connstatus").text(connection.state);
                            setInterval(()=>{
                                connection.invoke("SendStatistics");
                                },1000);
                        }).catch((err) => { console.log(err) });
						
                        connection.on("ReceiveCategoryCount", (value)=>{
                            $("#categorycount").text(value);
                        });
						
						connection.on("ReceiveProductCount", (value2)=>{
							$("#productcount").text(value2);
						});
						
						connection.on("ReceiveActiveCategoryCount", (value3)=>{
							$("#ActiveCategorycount").text(value3);
						});
						
						connection.on("ReceivePassiveCategoryCount", (value4)=>{
							$("#PassiveCategoryCount").text(value4);
						});
						
						connection.on("ReceiveProductCountCategoryByBurger", (value5)=>{
							$("#ProductCountCategoryByBurger").text(value5);
						});
						
						connection.on("ReceiveProductCountCategoryByDrink", (value6)=>{
							$("#ProductCountCategoryByDrink").text(value6);
						});
						
						connection.on("ReceiveProductPriceAverage", (value7)=>{
							$("#ProductPriceAverage").text(value7);
						});
						
						connection.on("ReceiveProductByMinPrice", (value8)=>{
							$("#ProductByMinPrice").text(value8);
						});
						
						connection.on("ReceiveProductByMaxPrice", (value9)=>{
							$("#ProductByMaxPrice").text(value9);
						});
						
						connection.on("ReceiveBurgerAveragePrice", (value10)=>{
							$("#BurgerAveragePrice").text(value10);
						});
						
						connection.on("ReceiveDrinkAveragePrice", (value11)=>{
							$("#DrinkAveragePrice").text(value11);
						});
						
						connection.on("ReceiveTotalOrderCount", (value12)=>{
							$("#TotalOrderCount").text(value12);
						});
						
						connection.on("ReceiveLastOrderPrice", (value13)=>{
							$("#LastOrderPrice").text(value13);
						});
						
						connection.on("ReceiveActiveOrderCount", (value14)=>{
							$("#ActiveOrderCount").text(value14);
						});
						
						connection.on("ReceiveTotalMoneyCaseAmount", (value15)=>{
							$("#TotalMoneyCaseAmount").text(value15);
						});
						
						connection.on("ReceiveMenuTableCount", (value16)=>{
							$("#MenuTableCount").text(value16);
						});
                    });
                </script>
                </div>
            </div>
        </div>
    </div>
</div>


