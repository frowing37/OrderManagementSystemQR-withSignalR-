@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.CategoryDto.CreateCategoryDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Forms</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Category" asp-action="CreateCategory" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Kategori Adı Giriniz</label>
                                <input id="categoryname" type="text" asp-for="Name" class="form-control">
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" asp-for="Status">
                                    <span class="form-check-sign">Kategori aktif olarak mı oluşturulsun ?</span>
                                </label>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Kategori Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>