@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.CategoryDto.UpdateCategoryDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Forms</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Category" asp-action="UpdateCategory" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input id="categoryid" type="hidden" asp-for="CategoryID" class="form-control">
                            <input id="categorystatus" type="hidden" asp-for="Status" class="form-control">
                            <div class="form-group">
                                <label for="categoryname">Kategori Adı Giriniz</label>
                                <input id="categoryname" type="text" asp-for="Name" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Kategoriyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>