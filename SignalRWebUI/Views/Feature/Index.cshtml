@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model List<SignalRWebUI.Models.Dtos.FeatureDto.ResultFeatureDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne Çıkanlarla ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">Başlıklar</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var feature in Model)
                            {
                                <tr>
                                    <td>@feature.Title1</td>
                                    <td>@feature.Title2</td>
                                    <td>@feature.Title3</td>
                                    <td><a href="/Feature/DeleteFeature/@feature.FeatureID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Feature/UpdateFeature/@feature.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature" class="btn btn-outline-primary">Yeni Öne Çıkan Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>