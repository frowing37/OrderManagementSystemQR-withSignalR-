
@model SignalRWebUI.Models.Dtos.UserDto.RegisterDto

<!DOCTYPE html>
<html>
<head>
	<title>Anadolu Tat 1071 Giriş</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css"/>
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Pizza.jpg" alt="form">
			</div>
			<form class="form-detail" asp-controller="Home" asp-action="Register" method="post">
				<h2>Kullanıcı Kayıt</h2>
				<div class="form-row">
					<input type="text" class="input-text" asp-for="Name" placeholder="İsim" required>
				</div>
				<div class="form-row">
					<input type="text" class="input-text" asp-for="SecondName" placeholder="İkinci İsim">
				</div>
				<div class="form-row">
					<input type="text" class="input-text" asp-for="Surname" placeholder="Soyad" required>
				</div>
				<div class="form-row">
					<input type="tel" class="input-text" asp-for="PhoneNumber" placeholder="Telefon" required>
				</div>
				<div class="form-row">
					<input type="email" class="input-text" asp-for="Mail" placeholder="Email Address" required="">
				</div>
				<div class="form-row">
					<input type="password" class="input-text" asp-for="Password" placeholder="Password" required>
				</div>
				<div class="form-row-last">
					<input type="submit" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>