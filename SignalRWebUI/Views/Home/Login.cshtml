
@model SignalRWebUI.Models.Dtos.UserDto.LoginDto

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Anadolu Tat 1071 Giriş</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css"/>
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Pizza1.jpg" alt="form">
			</div>
			<form class="form-detail" asp-controller="Home" asp-action="Register" method="post">
				<h2>Kullanıcı Girişi</h2>
				<div class="form-row">
					<input type="text" name="full-name" id="full-name" class="input-text" asp-for="Email" placeholder="İsim" required>
				</div>
				<div class="form-row">
					<input type="text" name="full-name" id="full-name" class="input-text" asp-for="Password" placeholder="İkinci İsim">
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>