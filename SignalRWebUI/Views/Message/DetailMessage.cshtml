@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.MessageDto.GetMessageDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesaj İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detay Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label style="font-weight:bold;">Adı Soyadı:</label>
                            <label>@Model.NameSurname</label>
                        </div>
                        <div class="form-group">
                            <label style="font-weight:bold;">Mesaj İçeriği:</label>
                            <label>@Model.MessageContent</label>
                        </div>
                        <div class="form-group">
                            <label style="font-weight:bold;">Mail:</label>
                            <label>@Model.Mail</label>
                        </div>
                        <div class="form-group">
                            <label style="font-weight:bold;">Telefon:</label>
                            <label>@Model.Phone</label>
                        </div>
                        <div class="form-group">
                            <label style="font-weight:bold;">Meslek:</label>
                            <label>@Model.Subject</label>
                        </div>
                        <div class="form-group">
                            <label style="font-weight:bold;">Mesaj Gönderim Tarihi:</label>
                            <label>@Model.MessageSendDate</label>
                        </div>
                    </div>
                    <div class="card-action">
                        <a href="/Message/Index" class="btn btn-primary">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>