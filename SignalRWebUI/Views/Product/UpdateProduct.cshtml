@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model SignalRWebUI.Models.Dtos.ProductDto.UpdateProductDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Forms</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Product" asp-action="UpdateProduct" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input id="productid" type="hidden" asp-for="ProductID">
                            <input id="productstatus" type="hidden" asp-for="ProductStatus">
                            <div class="form-group">
                                <label for="productname">Ürün adı giriniz</label>
                                <input id="productname" type="text" asp-for="ProductName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="productdescription">Ürün açıklaması giriniz</label>
                                <input id="productdescription" type="text" asp-for="Description" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="productcategory">Ürün kategorisi seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="productIMGurl">Ürün resmi seçiniz</label>
                                <input id="productIMGurl" type="text" asp-for="ImageURL" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="productprice">Ürün fiyatı giriniz</label>
                                <input id="productprice" type="text" asp-for="Price" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Kategoriyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>