@model List<SignalRWebUI.Models.Dto_s.ProductDto.ResultProductDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürünlerle ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var urun in Model)
                                {
                                    <tr>
                                        <td>@urun.ProductID</td>
                                        <td>@urun.ProductName</td>
                                        <td>@urun.ProductStatus</td>
                                        <td><a href="/Product/DeleteProduct/@urun.ProductID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Product/UpdateProduct/@urun.ProductID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct" class="btn btn-outline-primary">Yeni Ürün Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>